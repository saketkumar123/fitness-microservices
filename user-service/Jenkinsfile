pipeline {
    agent {
        docker {
            image 'maven:3.9.9-jdk-21'
            args '-v $HOME/.m2:/root/.m2'
        }
    }

    environment {
        MAVEN_OPTS = '-Xmx1024m'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the full repo, then run build inside current folder
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir("${env.WORKSPACE}/${env.JOB_NAME}") {
                    // Build only the current service
                    sh "mvn clean package -f pom.xml"
                }
            }
        }

        stage('Test') {
            steps {
                dir("${env.WORKSPACE}/${env.JOB_NAME}") {
                    sh "mvn test -f pom.xml"
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                dir("${env.WORKSPACE}/${env.JOB_NAME}") {
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            echo "Finished pipeline for ${env.JOB_NAME}"
        }
        success {
            echo "${env.JOB_NAME} built successfully!"
        }
        failure {
            echo "${env.JOB_NAME} build failed!"
        }
    }
}
